extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= f.title
    form(method="POST")
      fieldset 
        label Título 
        input.w3-input.w3-round(type="text" name="title" value= f.title)
        label Ano 
        input.w3-input.w3-round(type="text" name="year" value= f.year)
      fieldset 
        legend Elenco 
        ul.w3-ul 
          each ator in f.cast 
            li
              input.w3-check(type="checkbox" name="cast" value= ator checked="checked")
              label= ator
      fieldset 
        legend Géneros 
        ul.w3-ul 
          each genero in f.genres
            li
              input.w3-check(type="checkbox" name="genres" value= genero checked="checked")
              label= genero
      br
      button.w3-btn.w3-purple.w3-mb-2(type="submit") Registar
    footer.w3-container.w3-blue 
