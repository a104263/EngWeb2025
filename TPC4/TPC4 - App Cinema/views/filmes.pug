extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= titulo
    .w3-container 
      table.w3-table-all 
        tr 
          th Ano
          th Título
          th Elenco 
          th Géneros
        each f in lfilmes 
          tr 
            td= f.year
            td
             a(href='/filmes/' + f.id)= f.title
            td
              ul.w3-ul 
                each ator in f.cast 
                  li 
                    a(href='/atores/' + ator)= ator
            td
              ul.w3-ul 
                each genero in f.genres 
                  li= genero 
            td
             a(href='/filmes/' + f.id + '/edit') Editar
            td
             a(href='/filmes/' + f.id + '/delete') Eliminar
    footer.w3-container.w3-blue 
