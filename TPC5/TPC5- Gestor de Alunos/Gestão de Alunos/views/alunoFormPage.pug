extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1= "Registar aluno"
    form(method="POST")
      fieldset 
        label Id
        input.w3-input.w3-round(type="text" name="id" required)
        label Nome 
        input.w3-input.w3-round(type="text" name="nome" required)
        label Git 
        input.w3-input.w3-round(type="text" name="git" required)
        fieldset
          legend TPC
          each num in Array.from({length: 9}, (x, i) => i+1)
            input.w3-check(type="checkbox" name="tpc" + num value=1)
            label TPC #{num}
      br
      button.w3-btn.w3-orange.w3-mb-2(type="submit") Registar
    footer.w3-container.w3-green 
