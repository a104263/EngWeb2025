extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1= a._id
    form(method="POST")
      fieldset 
        label Nome 
        input.w3-input.w3-round(type="text" name="nome" value= a.nome)
        label Git 
        input.w3-input.w3-round(type="text" name="git" value= a.git)
        fieldset
          legend TPC
          each num in Array.from({length: 9}, (x, i) => i+1)
            if a['tpc' + num]
              input.w3-check(type="checkbox" name="tpc" + num value=1 checked)
              label TPC #{num}
            else
              input.w3-check(type="checkbox" name="tpc" + num value=1)
              label TPC #{num}
      br
      button.w3-btn.w3-orange.w3-mb-2(type="submit") Registar
    footer.w3-container.w3-green
      address Generated by ENGWEB2025