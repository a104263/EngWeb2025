extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1= titulo
      a(href='/alunos/registo') +
    .w3-container 
      table.w3-table-all 
        tr 
          th Id
          th Nome
          th Git
        each a in lalunos
          tr 
            td
             a(href='/alunos/' + a._id)= a._id
            td= a.nome
            td= a.git
            td
             a(href='/alunos/' + a._id + '/edit') Editar
            td
             a(href='/alunos/' + a._id + '/delete') Eliminar
    footer.w3-container.w3-green
