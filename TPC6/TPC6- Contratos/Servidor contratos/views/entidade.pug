extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1 NIPC: #{nipc}
      h1 Entidade: #{nomeEntidade}
    .w3-container 
      h2 Contratos
      table.w3-table-all 
        tr 
          td Id:
          td Objeto Contrato:
          td Data:
          td Preço:
        each c in lContratos
          tr 
            td= c._id
            td= c.objectoContrato
            td= c.dataCelebracaoContrato
            td= c.precoContratual
      h3 Somatório do preço dos contratos: #{sum}
      a(href='/') Voltar
    footer.w3-container.w3-green
      address Generated by ENGWEB2025