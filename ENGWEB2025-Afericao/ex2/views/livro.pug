extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1= l.title
    .w3-container 
      img(src= l.coverImg)
      p Id: #{l._id}
      p Series: #{l.series}
      ul.w3-ul Authors:
        each a in l.author
          li #{a}
      p Rating : #{l.rating}
      p Description : #{l.description}
      p Language : #{l.language}
      p Isbn : #{l.isbn}
      ul.w3-ul Genres:
        each g in l.genres
          li #{g}
      ul.w3-ul Characters:
        each c in l.characters
          li #{c}
      p BookFormat : #{l.bookFormat}
      p Edition : #{l.edition}
      p Pages : #{l.pages}
      p Publisher : #{l.publisher}
      p Publish Date : #{l.publishDate}
      p First Publish Date :#{l.firstPublishDate}
      p Awards : #{l.awards}
      p Number of Ratings : #{l.numRatings}
      p Ratings By Stars : #{l.ratingsByStars}
      p Liked Percent : #{l.likedPercent}
      p Setting : #{l.setting}
      p BBE Score : #{l.bbeScore}
      p BBE Votes : #{l.bbeVotes}
      p Price : #{l.price}
    a(href='/')='Voltar'
    footer.w3-container.w3-green 
