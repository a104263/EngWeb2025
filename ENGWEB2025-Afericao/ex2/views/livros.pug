extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1= titulo
    .w3-container 
      table.w3-table-all 
        tr 
          td Id: 
          td Title:
          td Author: 
          td Publish Date: 
          td Pages:  
        each l in lLivros
          tr 
            td(style="max-width: 200px; overflow-wrap: break-word;")
             a(href= l._id)= l._id
            td= l.title
            td
             ul
              each a in l.author
               li
                a(href='/entidades/' + a)= a 
            td= l.publishDate
            td= l.pages
    footer.w3-container.w3-green
